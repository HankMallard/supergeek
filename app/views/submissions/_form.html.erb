<%= form_for(@submission, url: tasks_path, method: 'post') do |f| %>
	<div class="field">
    	<%= f.label :name %>
    	<%= f.hidden_field :name %>
   	</div>	
	
	<div class="field">
    	<%= f.label :task_id %>
    	<%= f.hidden_field :task_id %>
   	</div>

   	<div class="field">
    	<%= f.label :user_id %>
    	<%= f.hidden_field :user_id %>
   	</div>

  	<div class="field">
    	<%= f.label :answer %>
    	<%= f.text_field :answer %>
   	</div>

  <%= f.submit %>
  
<% end %>