  <!-- Background image -->
<div class="museum-image">
  <%= image_tag ("museum3-edit") %>
</div>


<!-- Supergeek challenge logo -->
<div class="challenge-logo">
  <%= image_tag ("tsngChallenge") %>
</div>


<!-- Large button group -->

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal-fullscreen">
  Enter
</button>

<div class="modal modal-fullscreen fade" id="modal-fullscreen" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Quick Start</h4>
      </div>
      <div class="modal-body">

			<form action="user_path(current_user[:id])" method="patch">
	
				<fieldset id='fs-username'>
					<h2 class="fs-title">So what should we call you?</h2>
					<input type="text" name="username" placeholder="Username" />
				</fieldset>

				<fieldset>
					<h2 class="fs-title">Choose your avatar</h2>
					<img id='left-icon' src="https://cdn0.iconfinder.com/data/icons/avatar-2/500/boy-128.png" />
					<input type="radio" name="icon" value="boy"  />
					<img id='right-icon' src="http://image.flaticon.com/icons/png/128/62/62806.png" />
					<input type="radio" name="icon" value="girl"  />
				</fieldset>

				<fieldset id='fs-submit'>
					<h2 class="fs-title">Ready?</h2>
					<input type="submit" name="submit" class="submit action-button" value="Let's Go!" />
				</fieldset>
			  
			</form>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

